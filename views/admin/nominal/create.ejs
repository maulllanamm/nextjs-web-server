<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form tambah nominal</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/nominal/create" method="POST">
              <div class="card-body">
                <label>Nama Koin</label>
                <select
                  class="form-control select2"
                  style="width: 100%"
                  name="coinName"
                  required
                >
                  <option selected="selected">Pilih Koin</option>
                  <option value="Gold">Gold</option>
                  <option value="Diamond">Diamond</option>
                  <option value="Jewel">Jewel</option>
                </select>
                <div class="form-group mt-3">
                  <label for="coinQuantity">Jumlah koin</label>
                  <input
                    type="number"
                    class="form-control"
                    name="coinQuantity"
                    id="coinQuantity"
                    placeholder="Masukan jumlah koin"
                    required
                  />
                  <div class="form-group mt-3">
                    <label for="price">Harga</label>
                    <input
                      type="text"
                      class="form-control"
                      name="price"
                      id="price"
                      placeholder="Masukan harga"
                      required
                    />
                  </div>
                </div>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->

          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
